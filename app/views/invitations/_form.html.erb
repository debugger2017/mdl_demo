<div class="row">
  <div class="col-md-6 col-md-offset-3">

<% @invites.each do |invitee| %>
  <ul>
     <li>
      <div class="actions">
        <%= form_for(:invite,url: invitations_path) do |f| %>
          <%= invitee['name'] %>
          <%= f.hidden_field :receiver_id , :value => invitee['id'] %>
          <%= f.hidden_field :group_id, :value => session[:group_id].to_i%>
          <div class = "sub-btn">
          <%= f.submit "Invite", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </li>
  </ul>
<% end %>
</div>
</div>